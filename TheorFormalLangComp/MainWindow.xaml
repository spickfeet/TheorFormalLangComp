<Window x:Class="TheorFormalLangComp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Grid Background="GhostWhite">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Создать"></MenuItem>
                <MenuItem Header="Открыть"></MenuItem>
                <MenuItem Header="Сохранить"></MenuItem>
                <MenuItem Header="Сохранить как"></MenuItem>
                <MenuItem Header="Выход"></MenuItem>
            </MenuItem>
            <MenuItem Header="Правка">
                <MenuItem Header="Отменить"></MenuItem>
                <MenuItem Header="Вернуть"></MenuItem>
                <MenuItem Header="Копировать"></MenuItem>
                <MenuItem Header="Вырезать"></MenuItem>
                <MenuItem Header="Вставить"></MenuItem>
                <MenuItem Header="Удалить всё"></MenuItem>
            </MenuItem>
            <MenuItem Header="Текст">
            </MenuItem>
            <MenuItem Header="Пуск">
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Header="Вызов справки"></MenuItem>
                <MenuItem Header="О программе"></MenuItem>
            </MenuItem>
        </Menu>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20 0 0 0">
            <Button Width="60" Margin="5 5 5 5" Background="White">
                <Image Source="resource/paper.png" Stretch="Uniform"/>
            </Button>
            <Button Width="60" Margin="5 5 5 5" Background="White">
                <Image Source="resource/folder.png" Stretch="Uniform"/>
            </Button>
            <Button Width="60" Margin="5 5 5 5" Background="White">
                <Image Source="resource/save.png" Stretch="Uniform"/>
            </Button>
            <Button Width="60" Margin="40 5 5 5" Background="White">
                <Image Source="resource/arrow.png" Stretch="Uniform"/>
            </Button>
            <Button Width="60" Margin="5 5 5 5" Background="White">
                <Image Source="resource/right-arrow.png" Stretch="Uniform"/>
            </Button>
            <Button Width="60" Margin="5 5 5 5" Background="White">
                <Image Source="resource/copy.png" Stretch="Uniform"/>
            </Button>
            <Button Width="60" Margin="5 5 5 5" Background="White">
                <Image Source="resource/scissors.png" Stretch="Uniform"/>
            </Button>
            <Button Width="60" Margin="5 5 5 5" Background="White">
                <Image Source="resource/paste.png" Stretch="Uniform"/>
            </Button>
        </StackPanel>

        <TextBox Grid.Row="2" Margin="20, 10, 20, 10" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"></TextBox>
        <Border Grid.Row="3" BorderBrush="Gray" BorderThickness="1" Margin="20, 10, 20, 10">
            <TextBlock Background="White"></TextBlock>
        </Border>
        
    </Grid>
</Window>
